  background: url(../../static/img/bgc.71fbb767.png) no-repeat top;
  background-size: 100% 80%;
}
.userinfo {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex; 
  -webkit-box-align: center; 
  -webkit-align-items: center; 
          align-items: center;
  margin: 0 50rpx;
}
.userinfo>view{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 0 50rpx 0 10rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.usertab{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  margin: 110rpx 0 60rpx;
}
